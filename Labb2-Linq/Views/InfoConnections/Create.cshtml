@model Labb2_Linq.Models.InfoConnection

@{
    ViewData["Title"] = "Create";
}

<h1>Enroll Student</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FK_StudentID" class="control-label">Student Name</label>
                <select asp-for="FK_StudentID" class ="form-control" asp-items="ViewBag.FK_StudentID"></select>
            </div>
            <div class="form-group">
                <label asp-for="FK_classesID" class="control-label">Students Class</label>
                <select asp-for="FK_classesID" class="form-control" asp-items="ViewBag.FK_ClassesID"></select>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="FK_teachersID" class="control-label">Teacher's Name</label>
                <select asp-for="FK_teachersID" class ="form-control" asp-items="ViewBag.FK_teachersID"></select>
            </div>
            <div class="form-group">
                <label asp-for="FK_CourseID" class="control-label">Course Name</label>
                <select asp-for="FK_CourseID" class ="form-control" asp-items="ViewBag.FK_CourseID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
